<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpgradeActivity">

    <TextView
        android:id="@+id/cowNumberTextViewID2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/cowMini2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/birdNumberTextViewID2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/birdMiniID2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/catNumberTextViewID2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/catMiniID2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cowMini2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cow" />

    <ImageView
        android:id="@+id/catMiniID2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/cowNumberTextViewID2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat" />

    <ImageView
        android:id="@+id/birdMiniID2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/catNumberTextViewID2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bird" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="@string/ulepszenia"
        android:textColor="#00ff24"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="249dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cow_in_glassesID"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/cow_in_glasses"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="96dp" />

            <Button
                android:id="@+id/cow_in_glasses_buttonID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_krow" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>