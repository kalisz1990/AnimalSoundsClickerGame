<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8ffffff"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="295dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mooCloudID"
        app:srcCompat="@drawable/grass_background" />

    <ImageView
        android:id="@+id/cowID"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:srcCompat="@drawable/cow" />

    <ImageView
        android:id="@+id/catID"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="136dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:srcCompat="@drawable/cat" />

    <ImageView
        android:id="@+id/birdID"
        android:layout_width="90dp"
        android:layout_height="63dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:srcCompat="@drawable/bird" />

    <ImageView
        android:id="@+id/mooCloudID"
        android:layout_width="217dp"
        android:layout_height="102dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="132dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saying_cloud" />

    <TextView
        android:id="@+id/AnimalSoundTextViewID"
        android:layout_width="73dp"
        android:layout_height="26dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="36dp"
        android:visibility="invisible"

        app:layout_constraintStart_toStartOf="@+id/mooCloudID"
        app:layout_constraintTop_toTopOf="@+id/mooCloudID" />

    <TextView
        android:id="@+id/cowNumberTextViewID"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/cowMini"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/birdNumberTextView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/birdMiniMainID"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/catNumberTextViewID"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/catMiniID"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cowMini"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cow" />

    <ImageView
        android:id="@+id/catMiniID"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/cowNumberTextViewID"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat" />

    <Button
        android:id="@+id/upgradeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:enabled="false"
        android:text="Ulepszenie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/birdMiniMainID"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/catNumberTextViewID"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bird" />

    <ImageView
        android:id="@+id/soundOffID"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sound_off" />

    <ImageView
        android:id="@+id/soundOnID"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sound_on" />

</android.support.constraint.ConstraintLayout>